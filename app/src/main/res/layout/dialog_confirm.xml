<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical"
    android:background="@drawable/dialog_confirm_background"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="15dp"
            android:fontFamily="@font/yuan_shen_font"
            android:text="确认操作"
            android:textColor="#0a0909"
            android:textSize="20sp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/yuan_shen_font"
            android:text="是否删除该商品"
            android:textSize="16dip"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <!-- 取消按钮 -->
            <Button

                android:id="@+id/btn_cancel"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/yuan_shen_font"
                android:text="取消"
                android:textStyle="bold"
                android:textColor="#D0BE76"
                android:background="@drawable/button_dialog_cancel"
                android:textSize="15sp" />

            <!-- 确认按钮 -->

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/yuan_shen_font"
                android:text="确定"
                android:textStyle="bold"
                android:textColor="#DCC8A1"
                android:background="@drawable/button_dialog_ok"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>